{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",

    "strict": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* 一時緩和（ビルド優先）。後で厳格化に戻します */
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,

    /* Vite/React 補助 */
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["src"]
}